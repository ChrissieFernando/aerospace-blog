<h1 align="center"> AEROSPACE BLOGGERS</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
  <% name = user.username.split("") %>
  <% name = name[0].upcase %>
    <ul class="listing" >
      <div class="row">
        <div class="well col-xs-12 col-sm-8 col-lg-8 col-md-8 col-md-offset-2 col-sm-offset-2 col-lg-offset-2 user1">
          <div class="name_user">
          <li><%= link_to name , user_path(user) %></li>
          </div>
          </br></br>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
        </br>
          <li><small class="btn btn-danger btn-lg"><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        </br></br>
          <% if logged_in? and current_user.admin? %>
            <li class="btn btn-warning"><%= link_to "Delete this user", user_path(user), method: :delete,
                data: { confirm: "Are you sure you want to delete the user and all their articles?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
