<% obj.each do |article| %>
  <div class="row " >
    <div class=" col-xs-12 col-sm-10 col-lg-8 col-md-10 col-md-offset-1 col-sm-offset-1 col-lg-offset-2 ">
      <div class="well well-lg effect5  "  id = "article" >
        <div class="article-title">
          <div class="row">
          <% user = article.user_id %>
          <% user = User.find(user) %>
          <% name = user.username.split("") %>
          <% name = name[0].upcase %>
          <div align = "center">
            <div class="name">
            </div>
            </br>
          <%= link_to article.title, article_path(article) %>
          </div>
          </div>
         <div class="article-body">
           <div class="card card-inverse card-success text-xs-center user">
            <div class="card-block">
              <blockquote class="card-blockquote">
              <h4>  <%= truncate(article.description , length: 50) %> </h4>
              </blockquote>
            </div>
          </div>
        </br>
        <div class="visible-lg">
        <% if article.video == nil %>
        <% else %>
          <object width="100%" height="420"
          data="<%= article.video %>">
          </object>
        <% end %>
      </div>

          <div class="article-meta-details">
            <small>Created by: <%= article.user.username if article.user%>,
                    <%= time_ago_in_words(article.created_at) %> ago,
                    last updated: <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>
        <% if article.categories.any? %>
          <p >Categories:</br> </br><%= render article.categories  %></p>
        <% end %>
        <% if logged_in? && (current_user == article.user || current_user.admin?) %>
          <div class="article-actions">
            <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this article", article_path(article), method: :delete,
                                          data: { confirm: "Are you sure you want to delete the article?"},
                                          class: "btn btn-xs btn-danger" %>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<% end %>
