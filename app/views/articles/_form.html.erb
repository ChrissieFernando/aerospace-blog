<%= render 'shared/errors', obj: @article %>

<div class='row '>
  <div class='col-xs-12 jumbotron effect5 user1 bg-danger'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <h3> <%= f.label :title %> </h3>
        </div>
        <div class="col-sm-8">
        <h2>  <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %></h2>
        </div>
      </div>
    </br>
    </br>
      <div class="form-group">
        <div class="control-label col-sm-2">
        <h4>  <%= f.label :description %> </h4>
        </div>
        <div class="col-sm-8">
          <h4><%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %></h4>
        </div>
      </div>
    </br>
    </br>
      <div class="form-group">
        <div class="row">
          <div class=" center" style="font-size:1.4em;color:orange;">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
    </br>
    </br>
      <div class="form-group">
        <div class="center ">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </br>
    <div class="col-xs-12  center">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
